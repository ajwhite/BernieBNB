- action = @visit.persisted? ? "update" : "create"

= form_for @visit, url: { action: action } do |f|
  .form-fields
    .form-group
      = f.label :zipcode, "Where are you going?"
      = f.text_field :zipcode, class: "form-control"
      %span Zipcode near your destination.

    .form-group
      = f.label :start_date, "Arriving when?"
      = f.text_field :start_date, class: "form-control"
      %span Arrival date.

    .form-group
      = f.label :end_date, "Departing when?"
      = f.text_field :end_date, class: "form-control"
      %span Departure date.

    .form-group
      = f.label :num_travelers, "How many total travelers?"
      = f.select :num_travelers,
        options_for_select((1..10).zip(1..7), @visit.num_travelers || nil),
        {},
        { class: 'form-control' }
      %span Including yourself.

  = f.submit "Contact Hosts", class: 'btn btn-success btn-block btn-lg'
